// EXEMPLO DE FUNCAO QUE LIMITA O ESPAÃ‡O
#include <stdio.h>

typedef struct{
    float x;
    float y;
}vetor;

void draw(vetor objeto, vetor velocidade);
void addVetor(vetor *a, vetor b);

int main(){
    vetor objeto;
    objeto.x=10;
    objeto.y=10;

    vetor velocidade;
    velocidade.x = 1;
    velocidade.y = 3.3;

    draw(objeto, velocidade);

    return 0;
}

void draw(vetor objeto, vetor velocidade) {
    
    addVetor(&objeto, velocidade);
    
    if ((objeto.x > 400) || (objeto.x < 0)) {
        velocidade.x = velocidade.x * -1;
    }
    if ((objeto.y> 400) || (objeto.y < 0)) {
        velocidade.y = velocidade.y * -1;
    }

    printf("%lf %lf\n", objeto.x, objeto.y);

    draw(objeto, velocidade);
}

void addVetor(vetor *a, vetor b){
    a->x = a->x + b.x;
    a->y = a->y + b.y;
}
